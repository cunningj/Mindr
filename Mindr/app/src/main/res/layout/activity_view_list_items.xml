<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_list_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ownerperson.mindr.ViewListItems">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_title"
        android:textSize="25dp"
        android:textColor="#000"
        android:gravity="center_horizontal"
        />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/list_item_names"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="40dp"
            android:paddingRight="16dp"
            android:orientation="vertical" >

        </LinearLayout>


    <Button
        android:id="@+id/delete_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE LIST"
        android:textSize="20dp"
        android:onClick="deleteListClick"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#FF6666"
        android:textColor="#fff"
        android:layout_marginTop="23dp"

        android:layout_marginBottom="30dp"/>

    ]

    <EditText
        android:id="@+id/list_item_on_views"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:hint="Enter item here"
        android:layout_weight="4"
        android:layout_alignBaseline="@+id/add_list_item_on_views"
        android:layout_alignBottom="@+id/add_list_item_on_views"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/add_list_item_on_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#00cc66"
        android:text="Add Item"
        android:onClick="addListItemOnViews"
        android:layout_weight="2"
        android:layout_above="@+id/delete_list"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="88dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="31dp" />


</RelativeLayout>
